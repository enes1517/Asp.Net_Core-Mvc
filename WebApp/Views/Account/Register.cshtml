@model RegisterDto

<div class="min-h-screen bg-gradient-to-br from-gray-100 to-blue-50 flex items-center justify-center py-12 px-4 sm:px-6 lg:px-8">
    <div class="max-w-md w-full bg-white shadow-2xl rounded-2xl p-8 transform transition-all hover:scale-105 duration-300">
        <div class="text-center mb-8">
            <h6 class="text-3xl font-bold text-gray-800">
                <i class="fa-solid fa-user-plus text-white bg-indigo-600 p-4 rounded-full shadow-md"></i>
                <br />
                Register
            </h6>
        </div>

        <div class="mb-6">
            <div class="text-red-500 font-medium text-center" asp-validation-summary="All"></div>
        </div>

        <form method="post" asp-action="Register" class="space-y-6">
            <div class="form-group">
                <label asp-for="UserName" class="block text-sm font-medium text-gray-700 mb-1"></label>
                <input asp-for="UserName" class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-indigo-500 focus:border-indigo-500 transition duration-200" />
            </div>

            <div class="form-group">
                <label asp-for="Email" class="block text-sm font-medium text-gray-700 mb-1"></label>
                <input asp-for="Email" class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-indigo-500 focus:border-indigo-500 transition duration-200" />
            </div>

            <div class="form-group">
                <label asp-for="Password" class="block text-sm font-medium text-gray-700 mb-1"></label>
                <input type="password" asp-for="Password" class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-indigo-500 focus:border-indigo-500 transition duration-200" />
            </div>

            <div class="form-group flex justify-center">
                <button type="submit" class="inline-flex items-center px-6 py-3 bg-indigo-600 text-white font-semibold rounded-lg hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-indigo-500 focus:ring-offset-2 transition duration-200">
                    <i class="fa-solid fa-user-plus mr-2"></i>
                    Register
                </button>
            </div>
        </form>
    </div>
</div>

<!-- Include Tailwind CSS and Font Awesome -->
<link href="https://cdn.jsdelivr.net/npm/tailwindcss@2.2.19/dist/tailwind.min.css" rel="stylesheet">
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css">